<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phone.module.mapper.DeviceAppMapper">
    
    <resultMap type="DeviceApp" id="DeviceAppResult">
        <result property="id"    column="id"    />
        <result property="deviceId"    column="device_id"    />
        <result property="appName"    column="app_name"    />
        <result property="packageName"    column="package_name"    />
        <result property="version"    column="version"    />
        <result property="status"    column="status"    />
        <result property="installTime"    column="install_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectDeviceAppVo">
        select id, device_id, app_name, package_name, version,status, install_time, update_time from device_app
    </sql>

    <select id="selectDeviceAppList" parameterType="DeviceApp" resultMap="DeviceAppResult">
        <include refid="selectDeviceAppVo"/>
        <where>  
            <if test="deviceId != null "> and device_id = #{deviceId}</if>
            <if test="appName != null  and appName != ''"> and app_name like concat('%', #{appName}, '%')</if>
            <if test="packageName != null  and packageName != ''"> and package_name like concat('%', #{packageName}, '%')</if>
            <if test="version != null  and version != ''"> and version = #{version}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="installTime != null "> and install_time = #{installTime}</if>
        </where>
    </select>
    
    <select id="selectDeviceAppById" parameterType="Long" resultMap="DeviceAppResult">
        <include refid="selectDeviceAppVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDeviceApp" parameterType="DeviceApp" useGeneratedKeys="true" keyProperty="id">
        insert into device_app
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">device_id,</if>
            <if test="appName != null and appName != ''">app_name,</if>
            <if test="packageName != null">package_name,</if>
            <if test="version != null">version,</if>
            <if test="status != null">status,</if>
            <if test="installTime != null">install_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">#{deviceId},</if>
            <if test="appName != null and appName != ''">#{appName},</if>
            <if test="packageName != null">#{packageName},</if>
            <if test="version != null">#{version},</if>
            <if test="status != null">#{status},</if>
            <if test="installTime != null">#{installTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateDeviceApp" parameterType="DeviceApp">
        update device_app
        <trim prefix="SET" suffixOverrides=",">
            <if test="deviceId != null">device_id = #{deviceId},</if>
            <if test="appName != null and appName != ''">app_name = #{appName},</if>
            <if test="packageName != null">package_name = #{packageName},</if>
            <if test="version != null">version = #{version},</if>
            <if test="status != null">status = #{status},</if>
            <if test="installTime != null">install_time = #{installTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDeviceAppById" parameterType="Long">
        delete from device_app where id = #{id}
    </delete>

    <delete id="deleteDeviceAppByIds" parameterType="String">
        delete from device_app where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>