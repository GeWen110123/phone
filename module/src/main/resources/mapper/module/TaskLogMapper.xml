<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phone.module.mapper.TaskLogMapper">
    
    <resultMap type="TaskLog" id="TaskLogResult">
        <result property="id"    column="id"    />
        <result property="strategyId"    column="strategy_id"    />
        <result property="targetId"    column="target_id"    />
        <result property="status"    column="status"    />
        <result property="logDetail"    column="log_detail"    />
        <result property="executeTime"    column="execute_time"    />
    </resultMap>

    <sql id="selectTaskLogVo">
        select id, strategy_id, target_id, status, log_detail, execute_time from task_log
    </sql>

    <select id="selectTaskLogList" parameterType="TaskLog" resultMap="TaskLogResult">
        <include refid="selectTaskLogVo"/>
        <where>  
            <if test="strategyId != null "> and strategy_id = #{strategyId}</if>
            <if test="targetId != null "> and target_id = #{targetId}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="logDetail != null  and logDetail != ''"> and log_detail = #{logDetail}</if>
            <if test="executeTime != null "> and execute_time = #{executeTime}</if>
        </where>
    </select>
    
    <select id="selectTaskLogById" parameterType="Long" resultMap="TaskLogResult">
        <include refid="selectTaskLogVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTaskLog" parameterType="TaskLog" useGeneratedKeys="true" keyProperty="id">
        insert into task_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="strategyId != null">strategy_id,</if>
            <if test="targetId != null">target_id,</if>
            <if test="status != null">status,</if>
            <if test="logDetail != null">log_detail,</if>
            <if test="executeTime != null">execute_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="strategyId != null">#{strategyId},</if>
            <if test="targetId != null">#{targetId},</if>
            <if test="status != null">#{status},</if>
            <if test="logDetail != null">#{logDetail},</if>
            <if test="executeTime != null">#{executeTime},</if>
         </trim>
    </insert>

    <update id="updateTaskLog" parameterType="TaskLog">
        update task_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="strategyId != null">strategy_id = #{strategyId},</if>
            <if test="targetId != null">target_id = #{targetId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="logDetail != null">log_detail = #{logDetail},</if>
            <if test="executeTime != null">execute_time = #{executeTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTaskLogById" parameterType="Long">
        delete from task_log where id = #{id}
    </delete>

    <delete id="deleteTaskLogByIds" parameterType="String">
        delete from task_log where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>