<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phone.module.mapper.DeviceCommandMapper">
    
    <resultMap type="DeviceCommand" id="DeviceCommandResult">
        <result property="id"    column="id"    />
        <result property="deviceId"    column="device_id"    />
        <result property="command"    column="command"    />
        <result property="params"    column="params"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="executeTime"    column="execute_time"    />
    </resultMap>

    <sql id="selectDeviceCommandVo">
        select id, device_id, command, params, status, create_time, execute_time from device_command
    </sql>

    <select id="selectDeviceCommandList" parameterType="DeviceCommand" resultMap="DeviceCommandResult">
        <include refid="selectDeviceCommandVo"/>
        <where>  
            <if test="deviceId != null "> and device_id = #{deviceId}</if>
            <if test="command != null  and command != ''"> and command = #{command}</if>
            <if test="params != null  and params != ''"> and params = #{params}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="executeTime != null "> and execute_time = #{executeTime}</if>
        </where>
    </select>
    
    <select id="selectDeviceCommandById" parameterType="Long" resultMap="DeviceCommandResult">
        <include refid="selectDeviceCommandVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDeviceCommand" parameterType="DeviceCommand" useGeneratedKeys="true" keyProperty="id">
        insert into device_command
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">device_id,</if>
            <if test="command != null and command != ''">command,</if>
            <if test="params != null">params,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="executeTime != null">execute_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">#{deviceId},</if>
            <if test="command != null and command != ''">#{command},</if>
            <if test="params != null">#{params},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="executeTime != null">#{executeTime},</if>
         </trim>
    </insert>

    <update id="updateDeviceCommand" parameterType="DeviceCommand">
        update device_command
        <trim prefix="SET" suffixOverrides=",">
            <if test="deviceId != null">device_id = #{deviceId},</if>
            <if test="command != null and command != ''">command = #{command},</if>
            <if test="params != null">params = #{params},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="executeTime != null">execute_time = #{executeTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDeviceCommandById" parameterType="Long">
        delete from device_command where id = #{id}
    </delete>

    <delete id="deleteDeviceCommandByIds" parameterType="String">
        delete from device_command where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>